<div class="hero">
  <div class="jumbotron center">
    <h1>Buy and Sell Manga or Anime</h1>
    <h2>from one otaku to another</h2>
  </div>
</div>

<div class="center">
  <%= link_to 'New Listing', new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %><br><br>
  <div class="row">
  <% @listings.each do |listing| %>
    <div class="col-md-3">
      <div class="thumbnail">
        <%= link_to image_tag(listing.image.url), listing %>
        <div class="caption">
          <h3><%= listing.name %></h3>
          <p><%= number_to_currency(listing.price) %></p>
          <p><%= "Sold by #{listing.user.name}" %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<br>

<%= link_to 'New Listing', new_listing_path, class: "btn btn-primary", data: { no_turbolink: true } %>

<br>
<br>
</div>
